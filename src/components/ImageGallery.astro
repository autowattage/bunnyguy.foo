---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
const images = import.meta.glob("../assets/**/*.{png,jpg,jpeg,gif}");
const { imgsrc = "../assets/indexheader.jpg", xdir, ydir } = Astro.props;
---
<div class="imggallery">
  <Image src={images[imgsrc]()} alt="Featured photo"/>
  <div>
    <button type="button"><Icon name="tdesign:arrow-left"/></button>
    <button type="button"><Icon name="tdesign:arrow-right"/></button>
  </div>
</div>
<!-- Note to self: figure out how to convert astro props into SCSS variables (im tweaking out)-->
<style lang="scss">
  @import '../styles/varsindex';
  div.imggallery {
    img {
      height: $header-height/1.5;
      clip-path: polygon(
        0 0,
        100% 0,
        100% calc(100% - $mp3-height - $padding),
        calc(100% - $mp3-height*2.5) calc(100% - $mp3-height - $padding),
        calc(100% - $mp3-height*2.5) 100%,
        0 100%
      );
    }
    div {
      display: flex; gap: $padding; 
      position: relative;
      button { 
        width: $mp3-height; height: $mp3-height;
        background-color: red; border: none;
        svg {height: 100%;}
      }
    }
  }
</style>
