---
import Footer from '../components/footer.astro';
import Head from '../components/head.astro';

import type { darkmode } from '../js/darkmode.js';
import '../css/flexbox.css';
import '../css/global.css';
import '../css/index.css';
import '@fontsource/be-vietnam-pro';

import { Image } from 'astro:assets';
const images = import.meta.glob("../assets/**/*.{png,jpg,jpeg,gif}");
---
<html lang="en">
  <Head/>
  <body onload="onload()">
    <header><a href="/">
      <Image src={images["../assets/site/stamp.png"]()} alt="yay"/>
    </a></header>
    <main>
      <h1>bunnyguy island</h1>
      <hr>
      <section id="linkbox" class="flexbox">
        <aside>
          <h2>stamps</h2>
          <nav><ul id="stamplist">
            <li><a href="./about"><Image src={images["../assets/stamps/whoami.png"]()} alt="whoami"/></a></li>
            <li><a href="./projects"><Image src={images["../assets/stamps/projects.png"]()} alt="projects"/></a></li>
          </ul></nav>
        </aside>
        <article class="threeblocks">
          <h2><a href="">featured pages</a></h2>
          <a href="/projects#nicksdayoff"><Image src={images["../assets/projects/nicksdayoff.gif"]()} alt="A pixel art video game screenshot with bunnyguy running in a lighted house."/></a>
          <div class="flexbox twoblocks">
            <a><Image src={images["../assets/projects/hotairballoon.png"]()} alt="A colorful hot air balloon made with paper tissue flys in the wind."/></a>
            <a href="/projects#bombgame"><Image src={images["../assets/projects/bombgame.gif"]()} alt="A mouse hovers over a ring appearing around a pixel art drawing of a bomb."/></a>
          </div>
        </article>
        <article class="threeblocks">
          <h2><a href="">projects</a></h2>
          <div class="flexbox twoblocks">
            <a href="/projects#htmlmp3"><Image src={images["../assets/projects/htmlmp3.png"]()} alt="An mp3 player made with HTML,CSS,and JS, playing 'September' by Earth, Wing, and Fire."/></a>
            <a href="/projects#shotdown"><Image src={images["../assets/projects/shotdown.gif"]()} alt="A 3D pixel art video game screenshot containing with flapping birds and a crosshair."/></a>
          </div>
          <a href="/projects#bunnyboard"><Image src={images["../assets/projects/bunnyboard.jpg"]()} alt="A custom stenograph keyboard."/></a>
        </article>
      </section>
      <hr>
      <section id="abouttheweb">
        <h2>About the Website</h2>
        <p>This website was made with Astro and raw HTML/CSS and is kindly hosted by Cloudflare.</p>
        <h3>View previous versions of bunnyguy island:</h3>
        <ul>
          <li><a href="https://snipchu.neocities.org/websitev1/index.html">Version 1</a></li>
          <li><a href="https://snipchu.neocities.org/websitev2/index.html">Version 2</a></li>
          <li><a href="https://snipchu.neocities.org/websitev3/index.html">Version 3</a></li>
          <li><a href="https://snipchu.neocities.org/websitev4/index.html">Version 4</a></li>
          <li><a href="https://snipchu.neocities.org/websitev5/index.html">Version 5</a></li>
          <li><a href="https://snipchu.neocities.org/websitemolcar/index.html">Version Molcar</a></li>
          <li><a href="https://snipchu.neocities.org/websitev6/index.html">Version 6</a></li>
          <li><a href="https://snipchu.neocities.org/websitev7/index.html">Version 7</a></li>
        </ul>
      </section>
    </main>
    <Footer/>
  </body>
</html>
